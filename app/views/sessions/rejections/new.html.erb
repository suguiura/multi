<h1>New rejection</h1>

<% form_for([@session, @rejection]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :totalRejected %><br />
    <%= f.text_field :totalRejected %>
  </p>
  <p>
    <%= f.label :session %><br />
    <%= text_field_tag "session", @session.start, :disabled => true %>
  </p>
  <p>
    <%= f.label :problem %><br />
    <% Problem.all.each do |problem| %>
      <%= f.radio_button :problem_id, problem.id, :checked => true %> <%= problem.name %><br />
    <% end %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', session_rejections_path(@session) %>
