
<table>
  <tr>
    <th><%=h Machine.human_attribute_name(:id) %></th>
    <th><%=h Machine.human_attribute_name(:code) %></th>
    <th><%=h Machine.human_attribute_name(:totalHeaders) %></th>
    <th><%=h Machine.human_attribute_name(:speed) %></th>
    <th><%=h Machine.human_attribute_name(:availableTime) %></th>
    <th><%=h Machine.human_attribute_name(:average_work_time_per_day) %></th>
    <th><%=h Machine.human_attribute_name(:utilization_percent_per_day) %></th>
  </tr>

<% @machines.each do |machine| %>
  <tr>
    <td><%=h machine.id %></td>
    <td><%=h machine.code %></td>
    <td><%=h machine.totalHeaders %></td>
    <td><%=h machine.speed %></td>
    <td><%=h DistanceInWords.from_seconds machine.availableTime %></td>
    <td><%=h DistanceInWords.from_seconds machine.average_work_time_per_day %></td>
    <td><%=h machine.utilization_percent_per_day %></td>
    <td><%= link_to t('show'), machine %></td>
    <td><%= link_to t('delete'), machine, :confirm => t('confirm'), :method => :delete %></td>
  </tr>
<% end %>
</table>

