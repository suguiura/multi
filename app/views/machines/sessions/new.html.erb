<h1>New session</h1>

<% form_for([@machine, @session]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :start %><br />
    <%= f.datetime_select :start %>
  </p>
  <p>
    <%= f.label :end %><br />
    <%= f.datetime_select :end %>
  </p>
  <p>
    <%= f.label :machine %><br />
    <%= text_field_tag "machine", @machine.code, :disabled => true %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', machine_sessions_path(@machine) %>
