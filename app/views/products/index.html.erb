<h1>Listing products</h1>

<table>
  <tr>
    <th>Board type</th>
    <th>Number of holes per board</th>
    <th>Number of boards per package</th>
    <th>Number of packages</th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%=h product.board_type %></td>
    <td><%=h product.number_of_holes_per_board %></td>
    <td><%=h product.number_of_boards_per_package %></td>
    <td><%=h product.number_of_packages %></td>
    <td><%= link_to 'Show', product %></td>
    <td><%= link_to 'Edit', edit_product_path(product) %></td>
    <td><%= link_to 'Destroy', product, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New product', new_product_path %>